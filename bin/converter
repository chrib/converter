#!/usr/bin/env ruby
require 'gli'
begin # XXX: Remove this begin/rescue before distributing your app
require 'converter'
rescue LoadError
  STDERR.puts "In development, you need to use `bundle exec bin/converter` to run your app"
  STDERR.puts "At install-time, RubyGems will make sure lib, etc. are in the load path"
  STDERR.puts "Feel free to remove this message from bin/converter now"
  exit 64
end

include GLI::App

program_desc 'A simple command line program to convert between different measurements'

version Converter::VERSION

desc 'Describe some switch here'
switch [:s,:switch]

desc 'Describe some flag here'
default_value 'the default'
arg_name 'The name of the argument'
flag [:f,:flagname]

desc 'Convert the given temperature to Celsius'
arg_name 'degree in Fahrenheit'
command :celsius do |c|
  c.action do |global_options,options,args|

    if args.length > 1
      raise "Only one argument can be converted"
      exit 1
    end

    # Your command logic here
     
    # If you have any errors, just raise them
    # raise "that command made no sense"
    Temperature.celsius(args[0].to_i)
  end
end

desc 'Convert the given temperature to Fahrenheit'
arg_name 'degree in Celsius'
command :fahrenheit do |c|
  c.action do |global_options,options,args|

    if args.length > 1
      raise "Only one argument can be converted"
      exit 1
    end
    Temperature.fahrenheit(args[0].to_i)
  end
end

desc 'Describe meter here'
arg_name 'Describe arguments to meter here'
command :meter do |c|
  c.action do |global_options,options,args|
    puts "meter command ran"
  end
end

desc 'Describe foot here'
arg_name 'Describe arguments to foot here'
command :foot do |c|
  c.action do |global_options,options,args|
    puts "foot command ran"
  end
end

desc 'Describe miles here'
arg_name 'Describe arguments to miles here'
command :miles do |c|
  c.action do |global_options,options,args|
    puts "miles command ran"
  end
end

desc 'Describe km here'
arg_name 'Describe arguments to km here'
command :km do |c|
  c.action do |global_options,options,args|
    puts "km command ran"
  end
end

desc 'Describe cm here'
arg_name 'Describe arguments to cm here'
command :cm do |c|
  c.action do |global_options,options,args|
    puts "cm command ran"
  end
end

desc 'Describe inches here'
arg_name 'Describe arguments to inches here'
command :inches do |c|
  c.action do |global_options,options,args|
    puts "inches command ran"
  end
end

pre do |global,command,options,args|
  # Pre logic here
  # Return true to proceed; false to abort and not call the
  # chosen command
  # Use skips_pre before a command to skip this block
  # on that command only
  true
end

post do |global,command,options,args|
  # Post logic here
  # Use skips_post before a command to skip this
  # block on that command only
end

on_error do |exception|
  # Error logic here
  # return false to skip default error handling
  true
end

exit run(ARGV)
